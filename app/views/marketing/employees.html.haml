#map-heading-wrapper
	#map-canvas.absolute{:data => {lat: @coords[0], long: @coords[1], near: @near.to_json}}

	#map-heading-promo-text.span6.well.border
		%h2 Get Hired Now!
		%p.lead Quickly and easily apply for tons of jobs with a single resume!
	#map-heading-sign-up.span4.well.border
		%h2 Sign up
		= simple_form_for(@employee, url: employee_registration_path, html: {class: 'form-vertical' }) do |f|
			.row
				.span2
					= f.input_field :first_name, autofocus: true, placeholder: "First", class: "input-block-level"
				.span2
					= f.input_field :last_name, placeholder: "Last", class: "input-block-level"
			= f.input_field :email, placeholder: "Email", class: "input-block-level"
			= f.input_field :password, placeholder: "Password", class: "input-block-level"
			= f.button :submit, 'Sign up', class: 'btn-primary btn-block btn-medium'
		%p.text-center
			Or
			= link_to "Sign In", new_user_session_path
