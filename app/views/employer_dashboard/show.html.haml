.row
  .span4
    %h1 Your Listings
  .span3.offset2.pull-right
    = link_to "Create New Listing", new_employer_job_path, class: "btn btn-success"
- @listings.each_slice(3) do |slice|
  .row
    - slice.each do |listing|
      .span4
        %h2= listing.title
        %p= listing.description
        %p
          Pay: $
          = listing.pay
        %p
          Location: North Pole
          -#(hardcoded, not an attribute yet)
        %p
          Applicants:
          = listing.applicants.count
