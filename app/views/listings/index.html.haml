.row
  .span8
    %h1 Listings
    %p
      = @listings.count
      Listings Available
  .span4
    = form_tag listings_path, method: :get, class: "form-inline pull-right" do
      = text_field_tag :search, params[:search], class: "input-medium", placeholder: "Search Jobs"
      = submit_tag "Search", class: "btn", name: nil

= will_paginate @listings, renderer: BootstrapPagination::Rails
%hr
- if @listings.empty?
  %p
    There aren't any jobs here.
- else
  - @listings.each do |listing|
    .row
      .span11
        %h4= link_to listing.title, listing_path(listing)
        .row-fluid
          .span4
            %p.muted= listing.employer.company_name
          .span4
            %p
              Pay: $
              = listing.pay
          .span4
            %p
              Location: North Pole
              -#(hardcoded, not an attribute yet
        %p= truncate listing.description, length: 100
      .span1
        = link_to "Apply", "#", class: "btn btn-info btn-apply"
    %hr

= will_paginate @listings, renderer: BootstrapPagination::Rails