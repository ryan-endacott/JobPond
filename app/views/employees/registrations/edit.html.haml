%br
%h2 Edit Account
.avatar.pull-right.text-right
  = image_tag current_user.avatar_url
  %br
  = link_to "Change image with gravitar", "https://en.gravatar.com/"
= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-vertical' }) do |f|
  = f.error_notification
  = display_base_errors resource
  = f.input :first_name, autofocus: true
  = f.input :last_name, required: true
  = f.input :email, required: true, input_html: {class: "input-xlarge"}
  = f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false, label: 'Change Password', input_html: {class: "input-xlarge"}
  = f.input :password_confirmation, label: 'Change Password Confirmation', required: false, input_html: {class: "input-xlarge"}
  = f.input :current_password, hint: "we need your current password to confirm your changes", required: true, input_html: {class: "input-xlarge"}
  %br
  = f.input :can_contact, hint: 'Allow employers to contact you about jobs without you applying.', inline_label: "Employers can contact me", label: false
  = f.button :submit, 'Update', class: 'btn-primary'
%h3 Cancel My Account
%p
  Unhappy? #{link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger"}
= link_to "Back", :back
